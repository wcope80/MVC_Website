
@{
    ViewBag.Title = "DeleteImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Images</h2>


@using (Html.BeginForm("DeleteImages", "ImageSlider", FormMethod.Post))
{
    <div style="display:inline-block; ">
        <table class="table">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @Html.EditorForModel()
            </tbody>
        </table>
    </div>
    <div class="clearfix">
        <button type="submit" class="btn btn-primary">Delete Selected Images</button>
    </div>
}
<div class="clearfix">
    <p><a href="@Url.Action("Index", "ImageSlider")" class="btn btn-primary">Slider Home</a></p>
</div>